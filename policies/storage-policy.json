{
    "mode": "all",
    "policyRule": {
        "if": {
            "allOf": [
                {
                    "field": "type",
                    "equals": "Microsoft.Storage/storageAccounts"
                },
                {
                    "not": {
                        "field": "name",
                        "match": "[a-z0-9]{1,5}[a-z0-9]{1,5}st[0-9]{1,3}"
                    }
                }
            ]
        },
        "then": {
            "effect": "audit"
        }
    }
}