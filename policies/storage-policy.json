{
    "properties": {
        "displayName": "Storage accounts naming convention",
        "description": "",
        "mode": "All",
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Storage/storageAccounts"
                    },
                    {
                        "not": {
                            "field": "name",
                            "match": "[a-z0-9]{1,5}-vnet-[0-9]{1,3}"
                        }
                    }
                ]
            },
            "then": {
                "effect": "audit"
            }
        }
    }
}